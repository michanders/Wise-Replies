<br>
<%= form_for :post, url: '/post' do |f| %>
  <%= f.text_field :title, placeholder: "Post Title", :autocomplete => :off %><br>
  <%= f.text_field :subject, placeholder: "Post Content", :autocomplete => :off %><br>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit "Submit" %>
<% end %>
